    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "json-server": "^1.0.0-beta.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
